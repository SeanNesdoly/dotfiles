[user]
	name = Sean Nesdoly
	email = srnesdoly@gmail.com
[core]
	excludesFile = ~/.gitignore_global
	autocrlf = input
	eol = lf

  # Pipe output to pager with `git -p`
  pager = less -iRX -+F
[push]
	default = nothing
[color]
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[status]
	submoduleSummary = true
[merge]
	conflictStyle = diff3
[alias]
	st = status --short --branch
	c = commit -v

  # Show changes that are staged/cached for the next commit
	ds = diff --staged
	dc = diff --cached

	bv = branch -vv
